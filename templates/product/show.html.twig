{% extends 'base.html.twig' %}

{% block body %}
<h1>Product</h1>

<table class="table table-striped">
    <tbody>
        <tr>
            <th>Name</th>
            <td>{{product.name}}</td>
        </tr>
         <tr>
            <th>Description</th>
            <td>{{product.description}}</td>
        </tr>
        <tr>
            <th>Cost price</th>
            <td>{{product.costPrice}}</td>
        </tr>
        <tr>
            <th>Sell price</th>
            <td>{{product.sellPrice}}</td>
        </tr>
        <tr>
            <th>SKU</th>
            <td>{{product.sku}}</td>
        </tr>
    </tbody>
</table>

<a class='btn btn-primary' href={{ path('product_edit', {'id': product.id}) }}>Edit</a>
<a class='btn btn-danger' href={{ path('product_delete', {'id': product.id}) }}>Delete</a>
{% endblock %}