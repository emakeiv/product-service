{% extends 'base.html.twig' %}

{% block title %}ProductController!{% endblock %}

{% block body %}
<h1>Products</h1>
<a href={{path('product_new')}} class="btn btn-primary">Add new</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Cost price</th>
            <th>Sell price</th>
            <th>SKU</th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
            <tr>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">
                        {{product.name}}
                    </a>
                </td>
                <td>{{product.description}}</td>
                <td>{{product.costPrice}}</td>
                <td>{{product.sellPrice}}</td>
                <td>{{product.sku}}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
     
{% endblock %}
